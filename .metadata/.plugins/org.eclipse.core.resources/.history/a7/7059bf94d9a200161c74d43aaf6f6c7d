import processing.core.PApplet;

public class Driver extends PApplet {
	Input	input;
	
	public static void main(String[] args)
	{
		PApplet.main("Input");
	} // main
	
	public void settings()
	{
		size(400,400);
	} // settings
	
	public void setup()
	{
		input	= new Input();
	} // setup
	
	public void draw()
	{
		background(204, 150, 204);
		
		ellipse(width / 2, input.getAdjustedFund(), 50, 50);
	} // draw
}
